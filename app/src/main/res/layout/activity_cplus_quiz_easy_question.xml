<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cplus_Quiz_easy_question">



        <TextView

            android:id="@+id/QuestionNo_Cplus_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1/10 "
            android:layout_marginStart="6dp"

            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="25sp"/>



    <TextView
        android:id="@+id/Score_Cplus_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textSize="27sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>


    <TextView

        android:id="@+id/Timer_easy_Cplusr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginLeft="299dp"

        android:textColor="@color/black"
        android:textSize="37sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:id="@+id/QuestionText_Cplus_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"


            android:text=" 1l. what is java langauge"
            />

    </LinearLayout>



        <RadioGroup
            android:id="@+id/radioGroup_Cplus_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerInParent="true"

            >
            <RadioButton
                android:id="@+id/rb1_Cplus_easy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textSize="30sp"
                android:padding="5dp"

                >

            </RadioButton>



            <RadioButton
                android:id="@+id/rb2_Cplus_easy"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textSize="30sp"
                android:padding="5dp"


                >

            </RadioButton>



            <RadioButton
                android:id="@+id/rb3_Cplus_easy"
                android:padding="5dp"


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textSize="30sp"
                >

            </RadioButton>


            <RadioButton
                android:id="@+id/rb4_Cplus_easy"
                android:padding="5dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="A"
                android:textSize="30sp"
                >

            </RadioButton>







        </RadioGroup>






    <Button
        android:id="@+id/NextBtn_easy_Cplus"

        android:background="@drawable/mybutton"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_margin="60dp"
        android:text="next">

    </Button>


</LinearLayout>